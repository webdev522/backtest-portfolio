{
  "name": "velopolio-server",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/node": "^14.14.20",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/chart.js": "^2.9.31",
    "@types/cli-progress": "^3.8.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mime-types": "^2.1.0",
    "aws-sdk": "^2.871.0",
    "axios": "^0.21.1",
    "chart.js": "^2.9.4",
    "chartjs-node-canvas": "^3.1.0",
    "cli-progress": "^3.8.2",
    "d3node-linechart": "^0.1.2",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.11.0",
    "fastify-compress": "^3.4.1",
    "fastify-cookie": "^5.2.0",
    "fastify-cors": "^5.2.0",
    "fuse.js": "^6.4.6",
    "googleapis": "^67.1.1",
    "json-schema-to-typescript": "^10.1.3",
    "jsonwebtoken": "^8.5.1",
    "mime-types": "^2.1.29",
    "mysql": "^2.14.1",
    "pm2": "^4.5.6",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.29"
  },
  "scripts": {
    "build": "tsc",
    "start:pm2": "pm2 start deploy.config.json",
    "reload": "pm2 start deploy.config.json",
    "start": "TS_NODE=1 NODE_PATH=src ts-node --transpile-only src/index.ts | pino-pretty -c -t",
    "start:dev": "TS_NODE=1 NODE_PATH=src ts-node-dev --respawn --transpile-only src/index.ts | pino-pretty",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "syncbot": "ts-node --transpile-only src/sync/index.ts",
    "initialize": "ts-node src/init.ts",
    "compile-schemas": "json2ts -i src/schema -o src/types",
    "sync-db": "yarn typeorm schema:sync"
  },
  "workspaces": {
    "nohoist": [
      "typeorm/**",
      "typeorm"
    ]
  }
}
